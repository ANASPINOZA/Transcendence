generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @unique @default(uuid())
  creatorOf String[]
  admineOf String[]
  friends String[]
  blockedUsers String[]
  profilePic String
  username String @unique
  title String
  userDMs UserMessages[]
  gameRecords GameRecord[]
  // userId UserInterface? @relation(fields: [userInterface], references: [id])
  userInterface String? @unique


  channelAdmin Channel @relation("channelAdmin" , fields: [channelAdminId], references: [id])
  channelAdminId String
  
  channelBaned Channel @relation("channelBaned" , fields: [channelBanedId], references: [id])
  channelBanedId String

  mutedUser Muted? @relation(fields: [mutedId], references: [id])
  mutedId String? @unique
  // channelMuted Channel @relation("channelMuted" , fields: [channelAdminId], references: [id])
  // channelMutedId String
}

model GameRecord{
  id String @id @default(uuid())
  userRecord User @relation(fields: [recordId], references: [id])
  recordId String @unique
}

model Message{
  id String @id @default(uuid())
  message String
  messageSenderId String // here we have id insteade of username, for if the user changed his username
  timeSent DateTime @default(now())
  messageRecieverId String // think this one will be removed
  DmMessage Messages @relation(fields: [msgId], references: [id])
  msgId String
}

// model UserInterface{
//   id String @id @default(uuid())
//   user User?
// }

model UserMessages{
  user User @relation(fields: [userId], references: [id])
  userId String

  messages Messages @relation(fields: [messagesId], references: [id])
  messagesId String

  @@id([userId, messagesId])
}

model Messages{
  id	String @id() @default(uuid())
  sender	String
  receiver	String
  messages	Message[]
  
  // userMessages User @relation(fields: [messagesId], references: [id])
  // messagesId String
  usersMessages UserMessages[]
}

// channel modules

model Channel{
  id String @id() @default(uuid())
  channelName String
  creator String
  channelType String @default("public")
  hash String?
  admins User[] @relation("channelAdmin")
  banedUsers User[] @relation("channelBaned")
  mutedUsers Muted[]
}

model Muted{
  id String @id() @default(uuid())
  timeToEnd DateTime
  mutedUser User?

  mutedChannel Channel @relation(fields: [mutedId], references: [id])
  mutedId String
}






























