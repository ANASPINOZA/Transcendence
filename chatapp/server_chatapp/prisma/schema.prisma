// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @unique @default(uuid())
  creatorOf String[]
  admineOf String[]
  friends String[]
  blockedUsers String[]
  profilePic String
  username String
  title String
  userDMs Messages[]
  gameRecords GameRecord[]
}

model GameRecord{
  id String @id @default(uuid())
  userRecord User @relation(fields: [recordId], references: [id])
  recordId String @unique
}

model Message{
  id String @id @default(uuid())
  messageSenderId String
  timeSent String
  messageRecieverId String // think this one will be removed
  userMessage Messages @relation(fields: [msgId], references: [id]) 
  msgId String @unique
}

model Messages{
  id String @id() @default(uuid())
  toUserId String
  messages Message[]
  
  userMessages User @relation(fields: [messagesId], references: [id])
  messagesId String @unique() @default(uuid())
}


