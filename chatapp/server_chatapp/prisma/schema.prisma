generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @unique @default(uuid())
  creatorOf String[]
  admineOf String[]
  friends String[]
  blockedUsers String[]
  profilePic String
  username String @unique
  title String
  userDMs UserMessages[]
  gameRecords GameRecord[]
}

model GameRecord{
  id String @id @default(uuid())
  userRecord User @relation(fields: [recordId], references: [id])
  recordId String @unique
}

model Message{
  id String @id @default(uuid())
  messageSenderId String // here we have id insteade of username, for if the user changed his username
  timeSent DateTime @default(now())
  messageRecieverId String // think this one will be removed
  userMessage Messages @relation(fields: [msgId], references: [id]) 
  msgId String
}

model UserMessages{
  user User @relation(fields: [userId], references: [id])
  userId String

  messages Messages @relation(fields: [messagesId], references: [id])
  messagesId String

  @@id([userId, messagesId])
}

model Messages{
  id	String @id() @default(uuid())
  sender	String
  receiver	String
  messages	Message[]
  
  // userMessages User @relation(fields: [messagesId], references: [id])
  // messagesId String
  usersMessages UserMessages[]
}


